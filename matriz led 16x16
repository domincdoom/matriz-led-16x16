word dato16 = 0B0000111111110000;
word dato15 = 0B0001000000001000;
word dato14 = 0B0010000000000100;
word dato13 = 0B0100000000000010;
word dato12 = 0B1000100000010001;
word dato11 = 0B1000100000010001;
word dato10 = 0B1000100000010001;
word dato9 =  0B1000000000000001;
word dato8 =  0B1000000000000001;
word dato7 =  0B1001000000001001;
word dato6 =  0B1001000000001001;
word dato5 =  0B1000100000010001;
word dato4 =  0B0100011111100010;
word dato3 =  0B0010000000000100;
word dato2 =  0B0001000000001000;
word dato1 =  0B0000111111110000;
word dato0 = 0B0000000000000000;

int tiempo = 500;

void setup() {
  Serial.begin(9600);
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(10, OUTPUT);
  pinMode(11, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(13, OUTPUT);
  pinMode(14, OUTPUT);
  pinMode(15, OUTPUT);
  pinMode(16, OUTPUT);
  pinMode(17, OUTPUT);
  pinMode(18, OUTPUT);
  pinMode(19, OUTPUT);
}

void muestra(word muest)
{
  digitalWrite(17, bitRead(muest, 15));
  digitalWrite(16, bitRead(muest, 14));
  digitalWrite(15, bitRead(muest, 13));
  digitalWrite(14, bitRead(muest, 12));
  digitalWrite(13, bitRead(muest, 11));
  digitalWrite(12, bitRead(muest, 10));
  digitalWrite(11, bitRead(muest, 9));
  digitalWrite(10, bitRead(muest, 8));
  digitalWrite(9, bitRead(muest, 7));
  digitalWrite(8, bitRead(muest, 6));
  digitalWrite(7, bitRead(muest, 5));
  digitalWrite(6, bitRead(muest, 4));
  digitalWrite(5, bitRead(muest, 3));
  digitalWrite(4, bitRead(muest, 2));
  digitalWrite(3, bitRead(muest, 1));
  digitalWrite(2, bitRead(muest, 0));
}
void loop() {
  // put your main code here, to run repeatedly:
  muestra(dato0);
  digitalWrite(18, HIGH);
  digitalWrite(19, HIGH);
  digitalWrite(19, LOW);
  digitalWrite(18, LOW);
  muestra(dato1);
  delayMicroseconds(tiempo);
  muestra(dato0);
  digitalWrite(19, HIGH);
  digitalWrite(19, LOW);
  muestra(dato2);
  delayMicroseconds(tiempo);
